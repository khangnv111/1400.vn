<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <script>
        appPath = '@W1400.Utility.Config.ApplicationUrl';
    </script>



    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/plugincss")
    @*@Scripts.Render("~/bundles/modernizr")*@

    @Scripts.Render("~/bundles/jquery")

</head>
<body>
    <div id="wrapper">

        @Html.Action("Header", "Common")

        <div id="page-wrapper" class="container">
            <div id="TemplateContent">
                @RenderBody()

            </div>
        </div>
        <!-- /#page-wrapper -->

    </div>


    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/ckEditor/build-config.js"></script>
    <script src="~/ckEditor/ckeditor.js"></script>
    <script src="~/ckEditor/config.js"></script>
    <script src="~/ckEditor/styles.js"></script>


    @Scripts.Render("~/bundles/metisMenu")
    @Scripts.Render("~/bundles/tableExport")

    @Scripts.Render("~/bundles/treeview")

    @Scripts.Render("~/bundles/hightchart")


    @Scripts.Render("~/bundles/html5pdf")
    <script>
        if (screen && screen.width > 1024) {
            document.write('<script type="text/javascript" src="' + Utils.UrlRoot + 'Scripts/plugins/dropdown-hover/bootstrap-dropdownhover.min.js"><\/script>');
        }
        if (screen && screen.width >= 768) {
            document.write('<script type="text/javascript" src="' + Utils.UrlRoot + 'Scripts/plugins/dataTables/dataTables.fixedHeader.min.js"><\/script>');
        }
    </script>

    @RenderSection("scripts", required: false)
</body>
</html>
<script type="text/javascript">


    $(document).ready(function () {
        // Đầu trang
        //$('body').append('<div id="backtop"></div>');
        $(window).scroll(function () {
            if ($(window).scrollTop() != 0) {
                $('#backtop').fadeIn();
            } else {
                $('#backtop').fadeOut();
            }
        });
        $('#backtop').click(function () {
            $('html, body').animate({ scrollTop: 0 }, 1000);
        });
    });
</script>